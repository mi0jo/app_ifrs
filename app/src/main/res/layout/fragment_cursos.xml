<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fundo"
    tools:context=".ui.cursos.cursosFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">



            <Button
                android:id="@+id/btn_adm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_gradient"
                android:text="@string/adm"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_gradient" />

            <Button
                android:id="@+id/btn_agro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agro"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_gradient" />

            <Button
                android:id="@+id/btn_tpg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tpg"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_gradient" />

            <Button
                android:id="@+id/btn_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ads"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_gradient" />

            <Button
                android:id="@+id/btn_comercio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/comercio"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_gradient" />

            <Button
                android:id="@+id/btn_admeja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/admpreja"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_gradient" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
