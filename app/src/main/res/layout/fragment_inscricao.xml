<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Imagem no topo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ps_ifrspng"
            android:layout_marginBottom="16dp" />

        <!-- Caixa 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_box"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como ingressar no IFRS Campus Rolante"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O ingresso nos cursos ocorre por seleção pública, com prova, sorteio ou Enem. Cada curso detalha o tipo de seleção em edital oficial. Cursos são gratuitos, mas a seleção pode ter taxa (com isenção possível). Informações no site de ingresso."
                android:justificationMode="inter_word"
                android:textAlignment="viewStart" />
        </LinearLayout>

        <!-- Caixa 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_box"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ações Afirmativas e Cotas"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O IFRS reserva vagas para pessoas negras, indígenas e quilombolas. Para negros, há comissão de heteroidentificação. Indígenas devem apresentar RANI ou declaração de liderança. Quilombolas precisam comprovar vínculo com a comunidade."
                android:justificationMode="inter_word"
                android:textAlignment="viewStart" />
        </LinearLayout>

        <!-- Botões -->
        <Button
            android:id="@+id/btn_provas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_gradient"
            android:text="Provas e Gabaritos"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_gradient"
            android:text="Site de Ingresso"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_editais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_gradient"
            android:text="Editais"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
