<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="9dp"
        android:gravity="center_horizontal"
        android:background="?android:attr/windowBackground">

        <ImageView
            android:id="@+id/logo_numem"
            android:layout_width="160dp"
            android:layout_height="125dp"
            android:layout_marginBottom="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logonumemhorizontal" />

        <TextView
            android:id="@+id/titulo_numem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nucleodememorias"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textAlignment="center" />

        <!-- CardView com descrição e links -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/descricao_numem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:justificationMode="inter_word"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/memorias"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/contato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contatonumen"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:autoLink="email"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sitenumen"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:autoLink="web"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/linha_do_tempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/linhadotempo"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:autoLink="web"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/instanumen"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="14sp"
                    android:autoLink="web" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCarousel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </LinearLayout>
</ScrollView>




