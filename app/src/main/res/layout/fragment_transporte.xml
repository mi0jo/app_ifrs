<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trandsportesif"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/rmb" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/rmbrota" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/rmbcontato" android:textColor="?android:textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/maroto" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/marota" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/macontato" android:textColor="?android:textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/citral" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/cirota" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/cicontato" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/ci" android:textColor="?android:textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/dc" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/dcrota" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/dccontato" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/dccontato2" android:textColor="?android:textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/mw" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/mwrota" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/mwcontato" android:textColor="?android:textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/salvador" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/sarota" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/sacontato" android:textColor="?android:textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/tche" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/tcherota" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/tchecontato" android:textColor="?android:textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/publico" android:textSize="18sp"
                    android:textStyle="bold" android:textColor="?android:textColorPrimary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/purota" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/pucontato" android:textColor="?android:textColorSecondary" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/puhor" android:textColor="?android:textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
