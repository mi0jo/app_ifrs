<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo_info"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/tpglogo"
            android:contentDescription="Logo do curso de InformÃ¡tica"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/titulo_curso"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/tpgtitu"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricao_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tpgdes"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:lineSpacingExtra="6dp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="16dp" />



        <TextView
            android:id="@+id/sobre_o_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tpginfo"

            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word" />

    </LinearLayout>
</ScrollView>
