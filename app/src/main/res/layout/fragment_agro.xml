<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo_agro"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_agro"
            android:contentDescription="Logo do curso de Agropecuária"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/titulo_curso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso Técnico em Agropecuária"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/descricao_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Se você curte o campo e quer transformar realidades, o Técnico em Agropecuária é pra você! Aqui, você vai aprender a cuidar da produção rural de forma criativa, sustentável e com os pés no chão. O curso te prepara para atuar com gestão, projetos agropecuários, sanidade animal e vegetal, topografia, fiscalização e muito mais. Tudo isso com foco em desenvolvimento rural, inovação e cooperação!"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:lineSpacingExtra="6dp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/sobre_o_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Modalidade: presencial\n• Duração do curso: 8 semestres (4 anos)\n• Turno de funcionamento das turmas: manhã e tarde\n• Número de vagas: 35 (manhã); 35 (tarde)\n• Coordenação do curso: Josmael Corso\n• E-mail: agropecuaria@rolante.ifrs.edu.br"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word" />

    </LinearLayout>
</ScrollView>
