<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logo_adm"
            android:layout_width="189dp"
            android:layout_height="194dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Logo do curso de Administração"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_adm" />

        <TextView
            android:id="@+id/titulo_curso"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/admtitulo"
            android:textColor="?android:textColorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricao_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admdes"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="16dp"
            android:justificationMode="inter_word" />

        <TextView
            android:id="@+id/sobre_o_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/adminfos"
            android:textColor="?android:textColorPrimary"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word" />

    </LinearLayout>
</ScrollView>
