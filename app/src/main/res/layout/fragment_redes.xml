<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/titulo_numem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/redesoficias"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- CardView com os dois TextViews juntos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/texto_bolsas_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="@string/redesoficiasdes"
                    android:textSize="19sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/linha_do_tempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="@string/redesoficiasinsta"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:autoLink="web" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Imagem -->
        <ImageView
            android:id="@+id/campusfoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="27dp"
            android:src="@drawable/sitecampus"
            android:scaleType="fitCenter" />
    </LinearLayout>
</ScrollView>