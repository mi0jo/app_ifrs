<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rolante.rolanteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagem de fundo -->
            <ImageView
                android:id="@+id/imageBackground"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/campus_photo"
                android:contentDescription="@string/descricao_campus"
                android:alpha="0.6" />

            <!-- Camada de sombra preta semi-transparente -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#80000000" />

            <!-- Texto por cima da imagem -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/titleCampus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IFRS - Campus Rolante"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/history_campus"
                    android:textColor="#DDDDDD"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Texto localização embaixo -->
            <TextView
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location_campus"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
