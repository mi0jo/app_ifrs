<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rolante.rolanteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagem de fundo -->
            <ImageView
                android:id="@+id/imageBackground"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:alpha="0.6"
                android:contentDescription="@string/descricao_campus"
                android:scaleType="centerCrop"
                android:src="@drawable/campus_photo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#80000000" />

            <!-- Texto localização embaixo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/titleCampus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/history_campus"
                    android:textAlignment="viewStart"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="16sp"
                    android:justificationMode="inter_word" />
            </LinearLayout>

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/location_campus"
                android:textAlignment="viewStart"
                android:textColor="?attr/colorOnBackground"
                android:textSize="14sp"
                android:justificationMode="inter_word" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
